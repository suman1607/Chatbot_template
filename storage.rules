
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check workspace membership
    function isWorkspaceMember(workspaceId) {
      return exists(/databases/(default)/documents/workspaces/$(workspaceId)/members/$(request.auth.uid));
    }
    
    // Rules for AI knowledge files
    match /workspaces/{workspaceId}/knowledge/{fileName} {
      // Allow read/write only if the user is a member of the workspace
      allow read, write: if request.auth != null && isWorkspaceMember(workspaceId);
    }
    
    // Rules for AI persona avatar
    match /workspaces/{workspaceId}/persona/avatar.png {
      // Allow read for anyone (public avatar)
      allow read;
      // Allow write only if the user is a member of the workspace
      allow write: if request.auth != null && isWorkspaceMember(workspaceId);
    }
  }
}
